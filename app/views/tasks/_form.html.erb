<%= form_for @task, remote: true do |f| %>
  
  <div class="form-group">
    <%= f.text_area :description, placeholder: "Enter Task Here",  class: "form-control" %>
  </div>
  <div class="form-group" style="position:relative;">
    <%= f.text_field :deadline, id: "datetimepicker1", placeholder: "When is the deadline?", class: "form-control" %>
    <br>
  <div class="form-group">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
