<%= form_for @task, remote: true do |f| %>
  
  <div class="field">
    <%= f.text_field :description, placeholder: "Enter Task Here" %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
